<?xml version="1.0" encoding="utf-8"?>
<Configuration>

	<!--These are some of the loggers you can enable. There are several more 
		you can find in the documentation. Besides this log4j configuration, you 
		can also use Java VM environment variables to enable other logs like network 
		(-Djavax.net.debug=ssl or all) and Garbage Collector (-XX:+PrintGC). These 
		will be append to the console, so you will see them in the mule_ee.log file. -->

	<Appenders>
		<RollingFile name="Local"
			fileName="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}poc-kafka-error-handling.log"
			filePattern="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}poc-kafka-error-handling-%i.log">
			<PatternLayout
				pattern="%-5p %d [%t] [event: %X{correlationId}] %c: %m%n" />
			<SizeBasedTriggeringPolicy size="10 MB" />
			<DefaultRolloverStrategy max="10" />
		</RollingFile>
		<RollingFile name="siemdata"
			fileName="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}poc-kafka-error-handling-siem.log"
			filePattern="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}poc-kafka-error-handling-siem-%i.log">
			<PatternLayout
				pattern="%-5p %d [%t] [event: %X{correlationId}] %c: %m%n" />
			<SizeBasedTriggeringPolicy size="10 MB" />
			<DefaultRolloverStrategy max="10" />
		</RollingFile>
	</Appenders>
	<Loggers>

		<!-- Http Logger shows wire traffic on DEBUG. -->
		<!--AsyncLogger name="org.mule.service.http.impl.service.HttpMessageLogger" 
			level="DEBUG" / -->
		<AsyncLogger name="org.mule.service.http" level="WARN" />
		<AsyncLogger name="org.mule.extension.http" level="WARN" />

		<!-- Mule logger -->
		<AsyncLogger
			name="org.mule.runtime.core.internal.processor.LoggerMessageProcessor"
			level="INFO" />

		<!-- 
			AsyncLogger configuration for DefaultExceptionListener to filter out technical exceptions.
			
			This logger specifically handles exceptions from Mule's DefaultExceptionListener and filters out
			technical exceptions marked with "ERROR-HANDLING:MESSAGE-SHOULD-BE-SKIPPED" pattern.
			
			The RegexFilter is configured to:
			- DENY log entries containing the technical exception marker "ERROR-HANDING:MESSAGE-SHOULD-BE-SKIPPED"
			- ACCEPT all other error messages for normal logging
			
			This prevents cluttering logs with expected technical exceptions while preserving
			genuine error reporting functionality.
		-->
		<AsyncLogger
			name="org.mule.runtime.core.privileged.exception.DefaultExceptionListener"
			level="ERROR" additivity="false">
			<Filters>
				<RegexFilter
					regex="(?s).*ERROR-HANDLING:MESSAGE-SHOULD-BE-SKIPPED.*"
					onMatch="DENY" onMismatch="ACCEPT" />
			</Filters>
			<AppenderRef ref="Local" />
		</AsyncLogger>

		<AsyncLogger name="com.rbs.siem.production" level="INFO"
			additivity="false">
			<AppenderRef ref="siemdata" />
		</AsyncLogger>
		<AsyncRoot level="INFO">
			<AppenderRef ref="Local" />
		</AsyncRoot>
	</Loggers>

</Configuration>